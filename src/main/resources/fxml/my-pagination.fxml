<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root styleClass="pagination" stylesheets="@/css/my-pagination.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane fx:id="content" styleClass="page" />
      <HBox spacing="2.0" styleClass="pagination-control">
         <children>
            <HBox fillHeight="false" styleClass="control-box">
               <children>
                  <Button fx:id="bt_first" mnemonicParsing="false" styleClass="my-first-button" text="Primeiro" />
                  <Button fx:id="bt_previous_ten" mnemonicParsing="false" styleClass="my-left-button">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true" styleClass="left-image" />
                     </graphic></Button>
               </children>
            </HBox>
            <Pagination fx:id="pagination" styleClass="my-pagination" />
            <HBox fillHeight="false" styleClass="control-box">
               <children>
                  <Button fx:id="bt_next_ten" mnemonicParsing="false" styleClass="my-right-button">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true" styleClass="right-image" />
                     </graphic></Button>
                  <Button fx:id="bt_last" mnemonicParsing="false" styleClass="my-last-button" text="Ãšltimo" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</fx:root>
